{
  "src_folders" : ["tests"],
  "output_folder" : "tmp/reports",

  "webdriver" : {
    "start_process": true,
    "server_path": "../node_modules/.bin/chromedriver",
    "port": 9515
  },

  "test_settings" : {
    "default" : {
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "path" : "tmp/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled" : true,
        "chromeOptions" : {
          "args" : ["--headless", "--no-sandbox"]
        }
      }
    }
  }
}
